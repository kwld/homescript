{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist-server",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "server.ts",
    "src/server/**/*.ts",
    "src/shared/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "dist-server"
  ]
}
